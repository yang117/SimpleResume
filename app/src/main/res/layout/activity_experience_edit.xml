<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_medium">

    <EditText
        android:id="@+id/experience_edit_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/experience_company"/>

    <EditText
        android:id="@+id/experience_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/experience_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/experience_edit_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/start_date"
            android:inputType="date"/>

        <EditText
            android:id="@+id/experience_edit_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/end_date"
            android:inputType="date"/>

    </LinearLayout>

    <EditText
        android:id="@+id/experience_edit_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/experience_work"/>

    <TextView
        android:id="@+id/experience_edit_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="@string/action_delete"
        style="@style/AppTheme.TextView.DeleteButton"/>


</LinearLayout>